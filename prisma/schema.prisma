generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Events {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  date        DateTime
  creator     User     @relation(fields: [creatorId], references: [id])
  creatorId   String   @db.ObjectId
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  Events   Events[]
}
